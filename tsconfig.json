{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "lib",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "maxNodeModuleJsDepth": 0,
    "noEmit": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*.js", "test/**/*.js"]
}
